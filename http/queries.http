#         emoji
#         continent
#     }
# }

POST http://localhost:4444/
Content-Type: application/json

{
    "query": "query GetCountryByContinent($continent: String!) { getCountryByContinent(continent: $continent) { code name emoji continent } }",
    "variables": {
        "continent": "Europe"
    }
}

